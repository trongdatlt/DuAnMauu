<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvEditMaPhieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã phiếu"
        android:inputType="none"
        android:focusable="false"
        android:textSize="16sp" />

    <!-- Replace EditText with Spinner for Member -->
    <Spinner
        android:id="@+id/spinnerThanhVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Replace EditText with Spinner for Book -->
    <Spinner
        android:id="@+id/spinnerTenSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/tvEditGiaThue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá thuê"
        android:inputType="number"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tvEditNgayThue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày thuê"
        android:focusable="false"
        android:textSize="16sp" />

    <!-- RadioGroup for Trạng Thái -->
    <RadioGroup
        android:id="@+id/rgEditTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbDaTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã trả sách" />

        <RadioButton
            android:id="@+id/rbChuaTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa trả sách" />
    </RadioGroup>

</LinearLayout>
